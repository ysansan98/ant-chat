{
  "name": "ant-chat",
  "type": "module",
  "version": "1.0.0-alpha.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "pnpm -F electron dev",
    "rebuild:electron": "pnpm -F electron rebuild:electron",
    "rebuild:node": "pnpm -F electron rebuild:node",
    "test:unit": "pnpm -F electron test:unit",
    "type-check": "pnpm -F electron type-check",
    "build:mac": "pnpm -F electron build:mac",
    "build:win": "pnpm -F electron build:win",
    "db:generate": "pnpm -F electron db:generate",
    "db:migrate": "pnpm -F electron db:migrate",
    "lint": "pnpm eslint .",
    "clean": "rm -rf node_modules packages/*/node_modules",
    "version:patch": "pnpm version patch --no-git-tag-version && pnpm -r version patch --no-git-tag-version",
    "version:minor": "pnpm version minor --no-git-tag-version && pnpm -r version minor --no-git-tag-version",
    "version:major": "pnpm version major --no-git-tag-version && pnpm -r version major --no-git-tag-version",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/create-release.js patch",
    "release:minor": "node scripts/create-release.js minor",
    "release:major": "node scripts/create-release.js major"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.17.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@electron-toolkit/preload": "^3.0.1",
    "@eslint-react/eslint-plugin": "^1.48.5",
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "4.0.14",
    "@vitest/ui": "4.0.14",
    "eslint": "^9.31.0",
    "eslint-plugin-better-tailwindcss": "^3.6.2",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.3.0",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.19.3",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.19.0",
    "vitest": "4.0.14",
    "zod": "^3.24.4"
  }
}
